{
  "manifest_version": 3,
  "name": "Kolors",
  "description": "Get all colors used in a webpage",
  "version": "1.0.0",
  "author": "Santhosh Chinnasamy",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
}
